<Page class="page" xmlns="http://schemas.nativescript.org/tns.xsd" loaded="loaded">
    <ActionBar class="action-bar">
        <Label class="action-bar-title" background-color="green" text="Alumnos"></Label>
    </ActionBar>
    <ListView items="{{alumnos}}">
        <ListView.itemTemplate>
            <GridLayout columns="*,*">
                <Label text="{{id}}" id="id" class="btn" col="0" colSpan="2" tap="onTap"/>
                <Label stretch="none" id ="accion" class="circle" col="1"/>
            </GridLayout>
        </ListView.itemTemplate>
    </ListView>
</Page>